<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:l="clr-namespace:MainProject"
      xmlns:SampleData="clr-namespace:Expression.Blend.SampleData.Document" 
      x:Class="MainProject.p_Document" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
	  Background="White" 
      d:DataContext="{d:DesignData /SampleData/Document/Document.xaml}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <l:HeaderControl x:Name="Header" />

        <Frame Grid.Row="1" Name="DocumentFrame" Source="p_DocumentMenu.xaml" NavigationUIVisibility="Hidden">

        </Frame>        
    </Grid>

</Page>
